<Window x:Class="WpfApp1.home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="home" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <TextBlock Text="Show Your Face" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" TextAlignment="Center" TextWrapping="Wrap"  />
        <TextBlock Grid.Column="0" Margin="20,0,0,0" Text="{Binding biometrics}" Foreground="White" FontSize="18" FontWeight="Normal" TextWrapping="Wrap" VerticalAlignment="Center" />
        <Button  Name="btnBack" Margin="324,0,0,0" Click="btnCLearLog" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0"   Width="100" Height="21"  Panel.ZIndex="150" >
            ClearLog
        </Button>
    </Grid>
</Window>
